{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current ARM .s file",
            "group": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "GCC_PATH": "${config:cortex-debug.armToolchainPath}"
                }
            },
            "args": [
                "-f",
                "../common/Makefile"
            ],
            "problemMatcher": [
                {
                    "owner": "arm",
                    "fileLocation": [
                        "relative",
                        "${fileDirname}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):\\s+(Warning|Error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                }
            ]
        },
        {
            "label": "Launch Emulator with Graphic",
            "type": "shell",
            "command": "${config:qemu-system-arm}",
            "args": [
                "-verbose",
                "-cpu", "cortex-m4",
                "-machine", "STM32F4-Discovery",
                "-gdb", "tcp::56789",
                "-S",
                "-kernel", "${fileDirname}/build/firmware.elf"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Cortex-M4 r0p0 core initialised.*",
                    "endsPattern": "^.*GDB Server listening on.*"
                }
             }
        },
        {
            "label": "killAllQemu",
            "type": "shell",
            "command": "killall",
            "args": [
                "qemu-system-gnuarmeclipse"
            ],
            "isBackground": false
        }
    ]
}